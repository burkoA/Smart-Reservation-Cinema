    <script>
$(document).ready(function() {
  // При натисканні на посилання з id="admin-panel-link"
  $('#admin-panel-link').click(function(e) {
    e.preventDefault(); // Перешкоджає переходу за посиланням

    // Перевіряємо, чи вікно вже відображено
    if ($('.admin-panel-window').length > 0) {
      $('.admin-panel-window').remove(); // Видаляємо вікно, якщо воно вже є
    } else {
      // Створюємо вікно з класом admin-panel-window
      var adminPanelWindow = $('<div class="admin-panel-window">');
      
      // Створюємо список ul
      var ul = $('<ul>');

      // Додаємо посилання на сторінку Genres
      var genresLink = $('<li>').append($('<a>').attr('href', '/Genres/Index').text('Genres'));
      ul.append(genresLink);
      
      // Додаємо посилання на сторінку Directors
      var directorsLink = $('<li>').append($('<a>').attr('href', '/Directors/Index').text('Directors'));
      ul.append(directorsLink);

      // Додаємо список ul до вікна
      adminPanelWindow.append(ul);
      
      // Вставляємо вікно під елементом з id="admin-panel-link" в body
      $('#admin-panel-link').after(adminPanelWindow);
    }
  });
});
    </script>
